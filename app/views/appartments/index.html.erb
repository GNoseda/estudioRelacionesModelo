<h1> Apartments </h1>

<table>
    <thead>
        <tr>
            <th>Number</th>
            <th>Building</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <%= @appartments.each do |app|%>
            <tr>
                <td> <%= app.number%> </td>
                <td> <%= app.building_id %> </td>
                <td> <%= link_to "Show", building_appartment_path(@building, app) %> </td>
                <td> <%= link_to "Edit", edit_building_appartment_path(@building, app) %> </td>
                <td> <%= link_to "Destroy", building_appartment_path(@building, app), method: :delete, data: { confirm: 'Are you sure?'} %> </td> <!--se redirige nuevamente al index, pero luego de haber aplicado el delete-->
            </tr> 
        <% end %>
    </tbody>
</table>

<%= link_to "New Apartment", new_building_appartment_path(@building)%>